<%= form_with url: "/items/#{@item.id}?merchant_id=#{@item.merchant.id}", method: :patch, data: {turbo: false} do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, :value => @item.name %>
  <%= form.label :description %>
  <%= form.text_area :description, :value => @item.description %>
  <%= form.label :unit_price %>
  <%= form.number_field :unit_price, :value => @item.unit_price %>
  <%= form.submit 'Update Item' %>
<% end %>
