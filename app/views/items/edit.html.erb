<h1 id="item_editor"><%= "Editing #{@item.name}'s Details" %></h1>

<%= form_with url: "/items/#{@item.id}?merchant_id=#{@item.merchant.id}", method: :patch, data: {turbo: false} do |form| %>
  <p><strong><%= form.label :name %></strong></p>
  <p><stong><%= form.text_field :name, :value => @item.name %></strong></p>
  <p><strong><%= form.label :description %></strong></p>
  <p><strong><%= form.text_area :description, :value => @item.description %></strong></p>
  <p><strong><%= form.label :unit_price %></strong></p>
  <p><strong><%= form.number_field :unit_price, :value => @item.unit_price %></strong></p>
  <p><%= form.submit 'Update Item' %></p>
<% end %>
